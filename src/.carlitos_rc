###################################### Python server ############################################
function grep_ip(){
	i=1
	ifconfig | grep broadcast | cut -d" " -f10 | while read -r line; do
	echo -e IP $i: "\033[0;36m http://$line:8000\033[0m"
	let i=i+1;
	done
}

alias server='grep_ip && python3 -m http.server'
